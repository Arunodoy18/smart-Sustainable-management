SECRET_KEY=571cd5891ad336cb6ecd0dff8ca44ad9b03086ba18003e0514bab65ab175d38e

# -----------------------------------------------------------------------------
# DATABASE (Required)
# -----------------------------------------------------------------------------
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://smartwaste:smartwaste_dev@localhost:5432/smartwaste

# -----------------------------------------------------------------------------
# JWT AUTHENTICATION (Required)
# -----------------------------------------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=2e97a52e1104b5a4fa79d6af594a4e893ff5fe2920e7e8666a3b546482aaabd6
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# CORS (Required for production)
# -----------------------------------------------------------------------------
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# -----------------------------------------------------------------------------
# REDIS (Optional - for caching)
# -----------------------------------------------------------------------------
# REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# OBJECT STORAGE (Optional)
# -----------------------------------------------------------------------------
STORAGE_BACKEND=local
# S3_ENDPOINT_URL=
# S3_ACCESS_KEY_ID=
# S3_SECRET_ACCESS_KEY=
# S3_BUCKET_NAME=smartwaste-uploads

# -----------------------------------------------------------------------------
# MAPS (Optional)
# -----------------------------------------------------------------------------
# MAPBOX_ACCESS_TOKEN=your-mapbox-token

# -----------------------------------------------------------------------------
# ML MODEL CONFIGURATION (Optional)
# -----------------------------------------------------------------------------
# Enable CLIP model for real AI classification (requires ~600MB download + 2-3GB RAM)
# Set to false to use mock classifier for development
USE_CLIP_CLASSIFIER=false

# CLIP model from HuggingFace (default: openai/clip-vit-large-patch14)
# CLIP_MODEL_ID=openai/clip-vit-large-patch14

# Device for CLIP inference (cuda/cpu/None=auto)
# CLIP_DEVICE=cpu

# Directory to cache CLIP model files (default: ~/.cache/huggingface)
# CLIP_CACHE_DIR=/tmp/huggingface

# ML confidence thresholds (0.0-1.0)
ML_CONFIDENCE_HIGH_THRESHOLD=0.75
ML_CONFIDENCE_MEDIUM_THRESHOLD=0.60

# -----------------------------------------------------------------------------
# MONITORING (Optional)
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
