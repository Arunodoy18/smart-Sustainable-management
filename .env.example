# Smart Waste Management AI Platform
# Environment Configuration
# =========================
# Copy this file to .env and fill in your values

# Application
APP_NAME="Smart Waste API"
DEBUG=false
ENVIRONMENT=production

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/smartwaste
POSTGRES_USER=smartwaste
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=smartwaste

# Redis
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# AWS S3 (optional - for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=smart-waste-uploads

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@your-domain.com

# Monitoring (optional)
SENTRY_DSN=
LOG_LEVEL=INFO

# ML Service (optional - for production ML)
ML_SERVICE_URL=
ML_API_KEY=
