# =============================================================================
# Smart Waste Management Platform - Environment Configuration
# =============================================================================
# Copy this file to .env for local development
# NEVER commit .env files with real credentials to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION
# -----------------------------------------------------------------------------
APP_NAME="Smart Waste Platform"
APP_ENV=development
# Options: development, staging, production
DEBUG=true

# REQUIRED: Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-key-change-this-min-32-characters-here

API_VERSION=v1
API_HOST=0.0.0.0
API_PORT=8000

# -----------------------------------------------------------------------------
# CORS & SECURITY
# -----------------------------------------------------------------------------
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# -----------------------------------------------------------------------------
# DATABASE (PostgreSQL)
# -----------------------------------------------------------------------------
# Local development
DATABASE_URL=postgresql+asyncpg://smartwaste:smartwaste_dev@localhost:5432/smartwaste

# Connection pool settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Docker Compose PostgreSQL (used by docker-compose.yml)
POSTGRES_USER=smartwaste
POSTGRES_PASSWORD=smartwaste_dev
POSTGRES_DB=smartwaste

# -----------------------------------------------------------------------------
# REDIS CACHE (Optional for local dev)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# -----------------------------------------------------------------------------
# JWT AUTHENTICATION
# -----------------------------------------------------------------------------
# REQUIRED: Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=dev-jwt-secret-change-this-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# OBJECT STORAGE (Optional)
# -----------------------------------------------------------------------------
STORAGE_BACKEND=local
# Options: local, s3

# S3-compatible storage (Cloudinary, MinIO, AWS S3, etc.)
# S3_ENDPOINT_URL=https://your-s3-endpoint.com
# S3_ACCESS_KEY_ID=your-access-key
# S3_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET_NAME=smartwaste-uploads
# S3_REGION=us-east-1

# -----------------------------------------------------------------------------
# ML PIPELINE
# -----------------------------------------------------------------------------
ML_MODEL_PATH=./models
ML_CONFIDENCE_HIGH_THRESHOLD=0.85
ML_CONFIDENCE_MEDIUM_THRESHOLD=0.60
ML_BATCH_SIZE=32

# -----------------------------------------------------------------------------
# MAPS (Optional)
# -----------------------------------------------------------------------------
# MAPBOX_ACCESS_TOKEN=your-mapbox-token

# -----------------------------------------------------------------------------
# EMAIL (Optional)
# -----------------------------------------------------------------------------
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email
# SMTP_PASSWORD=your-password
# SMTP_FROM_EMAIL=noreply@smartwaste.ai

# -----------------------------------------------------------------------------
# RATE LIMITING
# -----------------------------------------------------------------------------
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# -----------------------------------------------------------------------------
# MONITORING & LOGGING
# -----------------------------------------------------------------------------
# SENTRY_DSN=https://your-sentry-dsn
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
ENABLE_EMAIL_VERIFICATION=false
ENABLE_DRIVER_APPROVAL=true
ENABLE_REWARDS_SYSTEM=true
