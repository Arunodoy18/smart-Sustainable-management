# ============================================================================
# Smart Waste Management Backend - Environment Configuration
# ============================================================================
# Copy this file to .env and update with your actual values
# For production deployment (Render), set these as environment variables

# ===========================================
# CORE SETTINGS
# ===========================================
PROJECT_NAME=Smart Waste Management AI
API_V1_STR=/api/v1
ENVIRONMENT=development

# Server Configuration
# For Render: PORT is automatically set by the platform
# For local: defaults to 8000
PORT=8000
HOST=0.0.0.0

# ===========================================
# SECURITY - REQUIRED
# ===========================================
# CRITICAL: Change this in production!
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-min-32-characters-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# ===========================================
# DATABASE - REQUIRED
# ===========================================
# Option 1: Full connection string (RECOMMENDED for production/Render)
# Format: postgresql://user:password@host:port/database
# Example: postgresql://postgres:mypassword@db.example.com:5432/waste_db
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/waste_management

# Option 2: Individual components (for local PostgreSQL)
# POSTGRES_SERVER=localhost
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# POSTGRES_DB=waste_management

# ===========================================
# SUPABASE - REQUIRED
# ===========================================
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# AI/ML - REQUIRED FOR CLASSIFICATION
# ===========================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key
MODEL_NAME=gpt-4o

# ===========================================
# CORS - OPTIONAL
# ===========================================
# Frontend URL for CORS in production
# For Netlify, set to your deployed frontend URL
# Example: https://your-app.netlify.app
FRONTEND_URL=http://localhost:3000

# Additional CORS origins (JSON array format)
# BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://your-app.netlify.app"]

# ===========================================
# STORAGE - OPTIONAL
# ===========================================
STORAGE_PATH=./storage

# ===========================================
# LOGGING - OPTIONAL
# ===========================================
LOG_LEVEL=INFO
