# Smart Waste Management Backend - Environment Variables
# Copy this file to .env for local development

# ===========================================
# REQUIRED - Core Settings
# ===========================================
PROJECT_NAME=Smart Waste Management AI
API_V1_STR=/api/v1
ENVIRONMENT=development

# Security - CHANGE IN PRODUCTION
SECRET_KEY=your-secret-key-min-32-characters-change-in-production

# ===========================================
# REQUIRED - Database
# ===========================================
# Option 1: Full connection string (preferred for cloud)
# SQLALCHEMY_DATABASE_URI=postgresql://user:password@host:5432/database

# Option 2: Individual components (for local development)
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=waste_management

# ===========================================
# OPTIONAL - Supabase (if using Supabase as database)
# ===========================================
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# OPTIONAL - AI/ML Features
# ===========================================
# Required for waste classification AI features
OPENAI_API_KEY=your-openai-api-key
MODEL_NAME=gpt-4o

# ===========================================
# OPTIONAL - Logging
# ===========================================
LOG_LEVEL=INFO

# ===========================================
# OPTIONAL - CORS
# ===========================================
# Allowed origins for CORS (JSON array format)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
